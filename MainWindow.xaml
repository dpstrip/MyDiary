<Window x:Class="MyDiary.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyDiary"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label Content="Title" HorizontalAlignment="Left" Height="26" Margin="567,19,0,0" VerticalAlignment="Top" Width="56" FontWeight="Bold"/>
        <TextBox HorizontalAlignment="Left" Height="108" Margin="567,50,0,0" TextWrapping="Wrap" Text="{Binding Title, Mode=TwoWay}" VerticalAlignment="Top" Width="218" SpellCheck.IsEnabled="True"/>
        <TextBox HorizontalAlignment="Left" Height="305" Margin="10,85,0,0" TextWrapping="Wrap" Text="{Binding Thought}" VerticalAlignment="Top" Width="520" SpellCheck.IsEnabled="True" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" AutoWordSelection="True" AcceptsReturn="True" AcceptsTab="True"/>
        <Button x:Name="saveButton" Content="Save Entry" HorizontalAlignment="Left" Height="36" Margin="604,367,0,0" VerticalAlignment="Top" Width="128" Click="Button_Click" />
        <Calendar x:Name="calendar" HorizontalAlignment="Left" Margin="572,163,0,0" VerticalAlignment="Top" Height="182" Width="197"/>

    </Grid>
</Window>
