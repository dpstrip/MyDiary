<Window x:Class="MyDiary.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyDiary"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label Content="Title" HorizontalAlignment="Left" Height="26" Margin="10,10,0,0" VerticalAlignment="Top" Width="56"/>
        <TextBox HorizontalAlignment="Left" Height="22" Margin="10,41,0,0" TextWrapping="Wrap" Text="{Binding Title, Mode=TwoWay}" VerticalAlignment="Top" Width="520"/>
        <Calendar HorizontalAlignment="Left" Height="181" Margin="592,32,0,0" VerticalAlignment="Top" Width="193" AutomationProperties.LabeledBy="{Binding EntryDate, Mode=TwoWay, StringFormat=\{0:d\}}" SnapsToDevicePixels="True" SelectedDate="{Binding EntryDate, FallbackValue=datetime.now, Mode=TwoWay}" DisplayDate="{Binding EntryDate, Mode=TwoWay}"/>
        <TextBox HorizontalAlignment="Left" Height="285" Margin="22,105,0,0" TextWrapping="Wrap" Text="{Binding Thought}" VerticalAlignment="Top" Width="508" SpellCheck.IsEnabled="True" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" AutoWordSelection="True" AcceptsReturn="True" AcceptsTab="True"/>

    </Grid>
</Window>
